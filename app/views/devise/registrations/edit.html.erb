<div class='header-for-page-div'>
  <h1 class='text-center'>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<div class='text-center'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :contact_number %><br />
      <%= f.text_field :contact_number %>
    </div>

    <div class="field">
      <%= f.label :profile_picture %> <br>
      <%= f.file_field :profile_picture, accept: 'image/jpg, image/jpeg, image/png' %>
    </div> <br>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div> <br>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-dark' %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>
</div>