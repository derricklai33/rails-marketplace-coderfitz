<h1>Apparel<h1>

<%# Search bar/form %>
<%= form_with(scope: :search, url: apparels_path, method: 'get', local: true) do |search| %>
  <%= search.label "Product" %>
  <%= search.text_field :title, placeholder: "Search by product or brand" %>

  <%= search.label :size %>
  <%= search.collection_select :size, ApparelSize.all, :size, :size, { :include_blank => "Select" } %>
  
  <%= search.submit 'Search' %>
<% end %>

<%= form_with(url: apparels_path, method: 'get', local:true) do |sort| %>
  <%= sort.select :order, ["Price: Low to High", "Price: High to Low", "Product: A to Z", "Product: Z to A"], { :include_blank => "Sort" } %>
  <%= sort.submit "Sort" %>
<% end %>

<ul>
  <% @apparel.each do |a| %>
    <% a.images.each do |image| %>
      <%= image_tag image %> <br>
    <% end %>
    <li>Product: <%= a.title %></li>
    <li>Price: <%= a.price %></li>
    <li>Seller: <%= link_to "#{a.user.full_name}", user_path(a.user.id) %> </li>
    <%= link_to "See More", listing_path(a.id) %>
  <% end %>
</ul>